<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="6"
    android:layout_margin="@dimen/default_margin"
    android:background="@android:color/holo_blue_bright"
    android:padding="@dimen/default_padding"
    android:layout_marginBottom="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3.4">

            <TextView
                android:id="@+id/serialNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="118"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center"
                android:background="@color/colorAccent"/>

            <ImageView
                android:id="@+id/imgPassport"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/fedpoffa_logo"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/matricNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CS/HND/F11/1781"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_gravity="center"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:id="@+id/fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surname Middlename Other names"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:gravity="center_horizontal"
                    android:paddingBottom="8dp"/>



                <CheckBox
                    android:id="@+id/presentAbsent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"
                    style="@style/Base.TextAppearance.AppCompat.Medium"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

