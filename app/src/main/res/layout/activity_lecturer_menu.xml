<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_margin"
    android:weightSum="3"
    android:gravity="center"
    android:background="@color/myBackgroundColor"
    tools:context="com.example.simeon_dee.mobileattendance.LecturerMenuActivity">

    <Button
        android:id="@+id/btTakeAttendance"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="TAKE ATTENDANCE"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:background="@color/colorAccent"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:onClick="btTakeAttendanceClickHandler"/>

    <Button
        android:id="@+id/btGetAttendance"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="GET ATTENDANCE REPORTS"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:background="@color/colorAccent"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:onClick="btGetAttendanceReportsClickHandler"/>
</LinearLayout>
